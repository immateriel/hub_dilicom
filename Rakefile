# -*- encoding : utf-8 -*-
begin
  require 'jeweler'
  Jeweler::Tasks.new do |gem|
    gem.name = "hub_dilicom"
    gem.summary = %Q{HUB Dilicom ruby library}
    gem.description = %Q{HUB Dilicom ruby library}
    gem.email = "jboulnois@immateriel.fr"
    gem.homepage = "http://github.com/immateriel/hub_dilicom"
    gem.authors = ["julbouln"]
    gem.files = Dir.glob('lib/**/*')

    gem.add_dependency "savon", '~> 2.0'

    # gem is a Gem::Specification... see http://www.rubygems.org/read/chapter/  20 for additional settings
  end
  Jeweler::GemcutterTasks.new


rescue LoadError
  puts "Jeweler (or a dependency) not available. Install it with: gem install jeweler"
end

